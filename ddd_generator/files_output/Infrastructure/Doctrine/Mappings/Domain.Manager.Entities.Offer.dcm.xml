<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Domain\Manager\Entities\Offer" table="offer">


	<unique-constraints>
		<unique-constraint name="offer_name_UNIQUE" columns="offer_name"/>

	</unique-constraints>

    <id  name="offer_id"  column="offer_id"  type="integer"  length="10" nullable="false">
        <generator strategy="IDENTITY"/>
    </id>

    <field  name="offer_name"  column="offer_name"  type="string"  length="255"  unique="true"  nullable="false" >
        <options>
          <option name="fixed"/>

        </options>  
    </field>

    <field  name="offer_weight"  column="offer_weight"  type="decimal"  scale="5"  precision="2" nullable="false">
        <options>
          <option name="fixed"/>

        </options>  
    </field>

    <field  name="offer_sharp"  column="offer_sharp"  type="integer"  scale="5"  precision="2" nullable="false">
        <options>
          <option name="unsigned"/>
          <option name="default">35</option>
        </options>  
    </field>


  </entity>
</doctrine-mapping>
